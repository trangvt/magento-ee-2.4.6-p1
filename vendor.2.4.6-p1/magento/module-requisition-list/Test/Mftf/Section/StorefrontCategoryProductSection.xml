<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="StorefrontCategoryProductSection">
        <element name="addToRequisitionListButton" type="button" selector="//div[contains(@class, 'product-item-info')][.//a[contains(text(), '{{productName}}')]]//button[contains(@class, 'requisition-list-button')]" parameterized="true" timeout="30"/>
        <element name="createNewRequisitionListButton" type="button" selector="//div[contains(@class, 'product-item-info')][.//a[contains(text(), '{{productName}}')]]//span[@data-action='add-to-requisition-list']//span[contains(., 'Create New Requisition List')]" parameterized="true" timeout="30"/>
    </section>
</sections>
