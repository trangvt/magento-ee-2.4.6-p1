<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="StorefrontCartPageSection">
        <element name="addShoppingCartToRequisitionListButton" type="button" selector="//div[contains(@class,'button') and contains(@class,'requisition-list-action')]//button[@title='Add Shopping Cart to Requisition List']" timeout="30"/>
        <element name="createNewRequisitionListButton" type="button" selector="//span[@data-action='add-to-requisition-list']//span[contains(., 'Create New Requisition List')]" timeout="30"/>
        <element name="requisitionListName" type="button" selector="#requisition-list-name" timeout="30"/>
        <element name="selectRequisitionListName" type="button" selector="//div[contains(@class,'requisition-list-action')]//div[@class='items']//span[contains(text(), '{{listName}}')]" parameterized="true"/>
        <element name="addToRequisitionListModalAddButton" type="button" selector=".modal-popup.confirm-requisition-popup._show .modal-footer button.action.primary.add" timeout="30"/>
    </section>
</sections>
