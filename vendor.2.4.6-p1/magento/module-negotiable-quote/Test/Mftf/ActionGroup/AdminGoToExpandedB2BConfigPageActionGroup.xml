<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminGoToExpandedB2BConfigPageActionGroup">
        <annotations>
            <description>Goes to the admin Store > Configuration > B2B Features page and expands the B2B Features section</description>
        </annotations>
        <conditionalClick selector="{{AdminB2BConfigSection.b2bFeaturesSectionHeader}}" dependentSelector="{{AdminB2BConfigSection.b2bQuote}}" visible="false" stepKey="expandB2BFeaturesAccordion" after="waitForConfigurationPageTitle"/>
        <waitForElementVisible selector="{{AdminB2BConfigSection.b2bQuote}}" stepKey="waitForEnableB2BQuote" after="expandB2BFeaturesAccordion"/>
    </actionGroup>
</actionGroups>
