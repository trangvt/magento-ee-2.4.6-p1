<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontValidatePurchaseOrderRuleAppliesToAllActionGroup">
        <annotations>
            <description>Verifies that Applies To option is set to "All". Must be on the edit Purchase Order Rule page.</description>
        </annotations>
        <waitForElementVisible selector="{{StorefrontPurchaseOrderRuleFormSection.appliesToAll}}" stepKey="waitForAppliesToAll"/>
        <seeElement selector="{{StorefrontPurchaseOrderRuleFormSection.appliesToAll}}" stepKey="seeAppliesToAll"/>
    </actionGroup>
</actionGroups>
