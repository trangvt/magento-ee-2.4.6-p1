<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Company\Api\Data\CompanyInterface">
        <attribute code="is_purchase_order_enabled" type="boolean">
            <join reference_table="purchase_order_company_config" reference_field="company_entity_id"
                  join_on_field="entity_id">
                <field>is_purchase_order_enabled</field>
            </join>
        </attribute>
    </extension_attributes>
</config>
