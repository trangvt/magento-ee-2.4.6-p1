<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontApprovePurchaseOrderAsAdminActionGroup" extends="StorefrontApprovePurchaseOrderActionGroup">
        <annotations>
            <description>Approves a purchase order as an admin on the storefront and verifies status change. Must be on the View Purchase Order page</description>
        </annotations>
        <waitForElementVisible selector="{{StorefrontPurchaseOrderViewSection.placeOrderButton}}" stepKey="verifyPlaceOrderNotAvailable"/>
    </actionGroup>
</actionGroups>
