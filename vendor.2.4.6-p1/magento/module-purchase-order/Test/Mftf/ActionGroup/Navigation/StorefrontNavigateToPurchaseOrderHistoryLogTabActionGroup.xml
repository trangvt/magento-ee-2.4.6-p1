<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontNavigateToPurchaseOrderHistoryLogTabActionGroup">
        <annotations>
            <description>Navigate to Purchase Order history log tab.</description>
        </annotations>
        <waitForElementVisible selector="{{StorefrontPurchaseOrderHistorySection.purchaseOrderHistoryTab}}" stepKey="waitForHistoryLogTab"/>
        <click selector ="{{StorefrontPurchaseOrderHistorySection.purchaseOrderHistoryTab}}" stepKey="clickOnHistoryLogTab"/>
        <waitForElementVisible selector="{{StorefrontPurchaseOrderHistorySection.purchaseOrderHistoryLogGrid}}" stepKey="waitForHistoryLogGrid"/>
    </actionGroup>
</actionGroups>
