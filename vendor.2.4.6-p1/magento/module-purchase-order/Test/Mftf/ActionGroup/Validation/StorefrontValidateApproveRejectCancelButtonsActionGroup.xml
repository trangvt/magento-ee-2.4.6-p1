<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontValidateApproveRejectCancelButtonsActionGroup">
        <annotations>
            <description>Validates that the Approve, Reject, and Cancel buttons appear in the purchase order view page.</description>
        </annotations>
        <waitForElementVisible selector="{{StorefrontPurchaseOrderViewSection.purchaseOrderCancelButton}}" stepKey="waitForCancelButton"/>
        <waitForElementVisible selector="{{StorefrontPurchaseOrderViewSection.purchaseOrderApproveButton}}" stepKey="waitForApproveButton"/>
        <waitForElementVisible selector="{{StorefrontPurchaseOrderViewSection.purchaseOrderRejectButton}}" stepKey="waitForRejectButton"/>
    </actionGroup>
</actionGroups>
