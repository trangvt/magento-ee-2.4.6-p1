<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontVerifyPORejectSelectedButtonDisabledActionGroup">
        <annotations>
            <description>Verifies that the reject selected button is disabled.</description>
        </annotations>
        <arguments>
            <argument name="tabName" defaultValue="" type="string"/>
        </arguments>
        <waitForElementVisible selector="{{StorefrontPurchaseOrderGridSection.purchaseOrderRejectSelectedButtonDisabled(tabName)}}" stepKey="waitForRejectSelectedButton"/>
    </actionGroup>
</actionGroups>
