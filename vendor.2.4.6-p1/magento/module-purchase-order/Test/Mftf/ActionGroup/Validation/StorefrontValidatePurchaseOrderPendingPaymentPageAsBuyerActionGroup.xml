<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontValidatePurchaseOrderPendingPaymentPageAsBuyerActionGroup">
        <annotations>
            <description>Verify that Purchase Order page contains Place Order button and link and has relevant message.</description>
        </annotations>
        <seeElement selector="{{StorefrontPurchaseOrderViewSection.placeOrderBannerLink}}" stepKey="seePlaceOrderBannerLink" />
        <seeElement selector="{{StorefrontPurchaseOrderViewSection.placeOrderButton}}" stepKey="seePlaceOrderButton" />
    </actionGroup>
</actionGroups>
