// Get Purchase Order id from email template
$purchaseOrderId = $block->getPurchaseOrderId();
$block->setPurchaseOrderById($purchaseOrderId);
?>
<h1>
    <?= $escaper->escapeHtml(__('Purchase Order #%1', $block->getPurchaseOrder()->getIncrementId())) ?>
</h1>
<p>
    <?php
    $createdAt = $block->formatDate(
        $block->getPurchaseOrder()->getCreatedAt(),
        \IntlDateFormatter::MEDIUM,
        true
    );
    $createdBy = $block->getCreatorName();
    ?>
    <?= $escaper->escapeHtml(__('Placed on %1 by %2', $createdAt, $createdBy)) ?>
</p>
