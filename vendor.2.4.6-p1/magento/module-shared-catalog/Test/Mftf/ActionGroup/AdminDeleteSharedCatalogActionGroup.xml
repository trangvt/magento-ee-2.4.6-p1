<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminDeleteSharedCatalogActionGroup">
        <arguments>
            <argument name="sharedCatalogName" type="string" defaultValue="TestSharedCatalog"/>
        </arguments>
        <click selector="{{AdminSharedCatalogsSection.selectByName(sharedCatalogName)}}" stepKey="clickSelectButton"/>
        <click selector="{{AdminSharedCatalogsSection.delete(sharedCatalogName)}}" stepKey="clickDeleteAction"/>
        <click selector="{{AdminConfirmationModalSection.ok}}" stepKey="confirmDeleteSharedCatalog"/>
        <waitForPageLoad stepKey="waitForDelete"/>
        <waitForText userInput="The shared catalog was deleted successfully." selector="{{AdminMessagesSection.success}}" stepKey="seeSuccessMessage"/>
    </actionGroup>
</actionGroups>
