<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminSharedCatalogSetPricingAndStructureConfigurationActionGroup">
        <annotations>
            <description>Navigate to shared catalog pricing and structure configuration.</description>
        </annotations>
        <click selector="{{AdminSharedCatalogsSection.select}}" stepKey="clickSelectButton"/>
        <click selector="{{AdminSharedCatalogsSection.setPricingAndStructure}}" stepKey="clickOnSetPricingAndStructure"/>
        <click selector="{{AdminSharedCatalogCatalogStructureSection.configureButton}}" stepKey="clickOnConfigureButton"/>
    </actionGroup>
</actionGroups>
