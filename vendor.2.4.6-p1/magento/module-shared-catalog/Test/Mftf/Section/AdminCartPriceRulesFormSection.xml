<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="AdminCartPriceRulesFormSection">
        <element name="customerGroups" type="text" selector="div.admin__action-multiselect-text"/>
        <element name="customerGroupsInput" type="input" selector="input.admin__control-text.admin__action-multiselect-search"/>
        <element name="customerGroupsFirstResult" type="text" selector="label.admin__action-multiselect-label"/>
        <element name="customerGroupsSelectAll" type="button" selector="button[data-action='select-all']"/>
        <element name="customerGroupsDoneBtn" type="button" selector="button.action-secondary"/>
        <element name="customerGroupsToggle" type="multiselect" selector="[name='customer_group_ids'] > div.admin__action-multiselect" timeout="30"/>
        <element name="customerGroupsDoneButton" type="button" selector="[name='customer_group_ids'] div.admin__action-multiselect-actions-wrap button.action-secondary" timeout="30"/>
        <element name="customerGroupsFilter" type="input" selector="[name='customer_group_ids'] div.admin__action-multiselect-search-wrap > input" timeout="30"/>
        <element name="customerGroupsOptions" type="button" selector="[name='customer_group_ids'] label.admin__action-multiselect-label span" timeout="30"/>
    </section>
</sections>

